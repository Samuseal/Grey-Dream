package main;
import java.awt.Image;
import java.awt.Rectangle;
import javax.swing.ImageIcon;
import java.math.*;


public class Ball {
    private String craft1 = "../Ball.png";
    private String craft2 = "../../src/Resources/Images/Ballblue.png";
    private int x;
    private int y;
    private int width;
    private int height;
    private boolean visible;
    private int dx,dy;
    private boolean bsizeu;
    private Image image;
    private Image imagesu;
    public Ball(int x, int y, int dxs,int dys) {
    	dy=dys;
    	dx=dxs;
        ImageIcon ii = new ImageIcon(this.getClass().getResource(craft1));
        ImageIcon ib = new ImageIcon(this.getClass().getResource(craft2));
    	image = ii.getImage();
    	imagesu = ib.getImage();
        width = image.getWidth(null);
        height = image.getHeight(null);
        visible = true;
        this.x = x;
        this.y = y;
    }


    public void move() {
    	x+=dx*4;
    	y+=dy*4;
    	if (x<1){
    		dx=1;
    	}
    	if (y<1){
    		dy=1;
    	}
    	if (x>800){
    		dx=-1;
    	}
    	if (y>400){
    		dy=-1;
    	}
    	if (Math.random()>0.9995){
    		bsizeu=true;
    	}
    }

    public int getX() {
        return x;
    }

    public int getY() {
        return y;
    }
    public void bounce(){
    	dx=dx*-1;
    }

    public boolean isVisible() {
        return visible;
    }
    
    public void setVisible(Boolean visible) {
        this.visible = visible;
    }
    
    public Image getImage() {
    	if (!bsizeu){
        return image;
    	}else{
    		return imagesu;
    	}
    }
    
    public void checkup(Player p,AI a){
    	if (bsizeu){
    		if (x>400){
    			a.sizeu();
    			bsizeu = false;
    		}
    		if (x<400){
    			p.sizeu();
    			bsizeu = false;
    		}
    	}
    }

    public Rectangle getBounds() {
        return new Rectangle(x, y, width, height);
    }


}
